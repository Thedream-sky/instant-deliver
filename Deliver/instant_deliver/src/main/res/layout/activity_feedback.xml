<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_feedback"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.instant_deliver.activities.feedbackActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/deepskyblue">
        <com.example.instant_deliver.identifyView.Topbar
            android:id="@+id/feedback_topbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            app:leftTextBackground="@drawable/ic_keyboard_arrow_left_white_36dp"
            app:title="意见反馈"
            app:titleColor="#ffffffff"
            app:titleTextsize="5dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <EditText
                android:id="@+id/feedback_message"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@null"
                android:scrollHorizontally="false"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="start"
                android:hint="亲爱的用户，你在使用中有什么问题，或有什么功能建议，都可以提交给我们，我们将在以后得版本里进行升级处理，谢谢..."
                />
        </android.support.v7.widget.CardView>
        <Button
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/feedback_submit"
            android:text="提交"
            android:textColor="#ffffff"
            android:background="@drawable/login_button_skin"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</LinearLayout>
