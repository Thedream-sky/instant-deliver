<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_find_back"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.instant_deliver.FindBackActivity">

    <com.example.instant_deliver.identifyView.Topbar
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:id="@+id/findback_topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:leftTextBackground="@drawable/ic_keyboard_arrow_left_black_36dp"
        app:title="找回密码"
        app:righttext="确定"
        app:rightColor="@color/colorPrimary"
        app:rightTextsize="8dp"
        app:titleColor="@color/textcolorHintb"
        app:titleTextsize="12dp"></com.example.instant_deliver.identifyView.Topbar>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ededed"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            android:text="@string/findback" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <EditText
            android:id="@+id/findback_email"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:drawableLeft="@drawable/ic_email_indigo_300_24dp"
            android:drawablePadding="8dp"
            android:hint="请输入邮箱账号"
            android:paddingLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#ededed"
        android:orientation="vertical">

        <TextView
            android:visibility="gone"
            android:id="@+id/findback_warn"
            android:textColor="@color/warn"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="bottom"
            android:paddingBottom="5dp"
            />
    </LinearLayout>

</LinearLayout>
