<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/activity_identify"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.instant_deliver.activities.identifyActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/deepskyblue">

        <com.example.instant_deliver.identifyView.Topbar
            android:id="@+id/identify_Topbar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="9dp"
            android:background="@color/deepskyblue"
            app:leftTextBackground="@drawable/ic_keyboard_arrow_left_white_36dp"
            app:title="绑定身份证"
            app:titleColor="#FFFFFFFF"
            app:titleTextsize="6dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/identifyLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <EditText
            android:id="@+id/identifyName"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请输入姓名" />
        <EditText
            android:id="@+id/identifyID"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:drawablePadding="10dp"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:hint="请输入身份证号码" />
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:id="@+id/identify_submit"
        android:text="绑定身份证"
        android:textColor="#ffffff"
        android:background="@drawable/login_button_skin"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
</LinearLayout>
