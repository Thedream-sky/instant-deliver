<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/aliceblue"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:paddingLeft="10dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent">
            <!--订单编号-->
            <TextView
                android:id="@+id/order_id_code"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
            <ImageView
                android:src="@drawable/ic_keyboard_arrow_right_indigo_300_24dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />
        </LinearLayout>
        <TextView
            android:textSize="10dp"
            android:id="@+id/order_state"
            android:textColor="#e6902e"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <ImageView
            android:id="@+id/order_img"
            android:scaleType="fitXY"
            android:layout_marginLeft="6dp"
            android:layout_width="78dp"
            android:layout_height="78dp" />
        <TextView
            android:id="@+id/order_info_detail"
            android:gravity="center_vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <TextView
            android:id="@+id/order_pay"
            android:gravity="center"
            android:layout_width="100dp"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/order_pay_detail"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/order_button_group"
        android:gravity="end|center_vertical"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:text="删除订单"
            android:id="@+id/delete_order"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_border"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
        <TextView
            android:text="取消订单"
            android:id="@+id/cancel_order"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_border"
            android:layout_width="80dp"
            android:layout_height="match_parent" />
       <!-- <TextView
            android:text="完成订单"
            android:id="@+id/finished_order"
            android:gravity="center"
            android:layout_marginRight="5dp"
            android:background="@drawable/textview_border"
            android:layout_width="80dp"
            android:layout_height="match_parent" />-->
    </LinearLayout>
</LinearLayout>
